set nocompatible              " be iMproved, required
filetype off                  " required
syntax on

let mapleader=" "
set showcmd
set path+=**
set wildmenu
set wildignore=+**/nodemodules/**
set tabstop=2
set shiftwidth=2
set list
set listchars=tab:→\ ,eol:↲,space:·
set so=20
set hlsearch
set noswapfile
set ignorecase
set smartcase
set number
set relativenumber
set incsearch
set smartindent
set autoindent
"set mouse=a
set undodir=~/.vim/undodir
set undofile
set cursorcolumn
set cursorline


set colorcolumn=105
highlight ColorColumn ctermbg=grey guibg=lightgrey


