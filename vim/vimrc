vnoremap <right> :<C-u>echo "No right for you!"<CR>

nnoremap <up> :echo "No up for you!"<CR>
vnoremap <up> :<C-u>echo "No up for you!"<CR>

nnoremap <down> :echo "no down for you!"<cr>
vnoremap <down> :<c-u>echo "no down for you!"<cr>
